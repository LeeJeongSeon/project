create table book (
book_id number not null primary key,
book_name varchar2(1000) not null,
book_img varchar2(1000),
book_genre varchar2(50) not null,
book_content clob,
book_publisher varchar2(500),
book_author varchar2(500),
book_counter number default 0, -- 대출횟수
book_check number default 0 -- 대출중인지 체크
);

--시퀀스 
create sequence book_seq
start with 1
increment by 1;

